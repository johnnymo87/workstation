{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-6",
  "permission": "allow",
  "tools": {
    "slack_*": false
  },
  "agent": {
    "slack": {
      "tools": {
        "slack_*": true
      }
    }
  },
  "plugin": [
    "opencode-beads"
  ],
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "playwright-mcp",
        "--headless",
        "--caps",
        "vision,devtools"
      ],
      "enabled": false
    }
  }
}
